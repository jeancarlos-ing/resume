---
import Section from "@/components/Section.astro";

import { skills } from "@cv";
---

<Section title="Habilidades">
    <ul>
        {
            skills.map(({ name }) => {
                return (
                    <li>
                        <span>{name}</span>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        align-items: center;
        background: rgb(61, 61, 61);
        border-radius: 6px;
        color: #fff;
        display: flex;
        font-size: 0.8rem;
        font-weight: 500;
        gap: 4px;
        padding: 0.2rem 0.6rem;
    }
</style>
